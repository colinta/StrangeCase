{% extends 'layouts/base.j2' %}

{% block main %}
<div class="page-header">
  <h1>{{ my.title }} <small>a {{ my.category }} by {{ meta.author.short_name }}</small></h1>
</div>

<div class="row">
  <div class="span10">
{% block content %}{% endblock %}
    <hr>
{% from 'includes/nextprev.j2' import nextprev %}
{{  nextprev(my, site) }}
  </div>

  <div class="span4">
    <h4>Published</h4>
    <div class="date"><span>{{ my.date | date }}</span></div>

  {% if not my.tags == empty %}
    <h4>Tags</h4>
    <ul class="tag_box">
    {% set tags_list = my.tags %}
    </ul>
  {% endif %}
  </div>
</div>
{% endblock %}
